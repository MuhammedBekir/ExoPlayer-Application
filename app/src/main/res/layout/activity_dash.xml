<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E1E1E1"

    android:layout_height="match_parent"
    tools:context=".ui.DashVidActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                 android:layout_marginTop="15dp">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/player_view2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:focusable="true"
                    app:controller_layout_id="@layout/custom_two"
                    app:resize_mode="fill" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_dash_loading"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_animation" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                 android:layout_marginTop="15dp">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/player_view3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:focusable="true"
                    app:controller_layout_id="@layout/custom_two2"
                    app:resize_mode="fill" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_dash_loading3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="invisible"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_animation" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>